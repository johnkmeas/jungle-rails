<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

      <div class="col-sm-4">
        <h3>Ratings</h3>
      <!--   <%= pp @user.inspect %>
        <%= pp @product_review.inspect %> -->
        <dl class="dl-verticle">
          <dt>rating</dt>
          <dd><%= @product_review.rating %></dd>
          <dt>description</dt>
          <dd><%= @product_review.description %></dd>
          <dt>By</dt>
          <dd><%= @user.find(@product_review).name %></dd>
          <dt>on</dt>
          <dd><%= @product_review.created_at %></dd>
        </dl>
      </div>

    </div>

  </article>

</section>
